<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- SEARCH -->
        <record id="dbm_version_search" model="ir.ui.view">
            <field name="name">dbm.version.search</field>
            <field name="model">dbm.version</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Archived" name="filter_archived" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <!-- LIST -->
        <record id="dbm_version_list" model="ir.ui.view">
            <field name="name">dbm.version.list</field>
            <field name="model">dbm.version</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="protected"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- FORM -->
        <record id="dbm_version_form" model="ir.ui.view">
            <field name="name">dbm.version.form</field>
            <field name="model">dbm.version</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="protected"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_dbm_version" model="ir.actions.act_window">
            <field name="name">Versions</field>
            <field name="res_model">dbm.version</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="dbm_version_search"/>
        </record>

    </data>
</odoo>
