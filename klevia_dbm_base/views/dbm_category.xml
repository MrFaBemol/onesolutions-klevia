<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- SEARCH -->
        <record id="dbm_category_search" model="ir.ui.view">
            <field name="name">dbm.category.search</field>
            <field name="model">dbm.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="company_id"/>
                </search>
            </field>
        </record>

        <!-- LIST -->
        <record id="dbm_category_list" model="ir.ui.view">
            <field name="name">dbm.category.list</field>
            <field name="model">dbm.category</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- FORM -->
        <record id="dbm_category_form" model="ir.ui.view">
            <field name="name">dbm.category.form</field>
            <field name="model">dbm.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>

                        <group string="Hostings">
                            <field name="hosting_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="is_on_premise"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_dbm_category" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="res_model">dbm.category</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="dbm_category_search"/>
        </record>

    </data>
</odoo>
