<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="dbm_instance_stage_list" model="ir.ui.view">
        <field name="name">dbm.instance.stage.list</field>
        <field name="model">dbm.instance.stage</field>
        <field name="arch" type="xml">
            <list editable="bottom" delete="1">
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="decoration_type" />
                <field name="fold" />
            </list>
        </field>
    </record>

    <record id="dbm_instance_stage_action" model="ir.actions.act_window">
        <field name="name">Instance Stages</field>
        <field name="res_model">dbm.instance.stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
