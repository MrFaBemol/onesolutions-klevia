<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- SEARCH -->
        <record id="dbm_tag_search" model="ir.ui.view">
            <field name="name">dbm.tag.search</field>
            <field name="model">dbm.tag</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- LIST -->
        <record id="dbm_tag_list" model="ir.ui.view">
            <field name="name">dbm.tag.list</field>
            <field name="model">dbm.tag</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>

        <!-- FORM -->
        <record id="dbm_tag_form" model="ir.ui.view">
            <field name="name">dbm.tag.form</field>
            <field name="model">dbm.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_dbm_tag" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">dbm.tag</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="dbm_tag_search"/>
        </record>

    </data>
</odoo>
