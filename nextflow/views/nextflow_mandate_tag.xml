<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="nextflow_mandate_tag_list" model="ir.ui.view">
            <field name="name">nextflow.mandate.tag.list</field>
            <field name="model">nextflow.mandate.tag</field>
            <field name="arch" type="xml">
                <list string="Tags" editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>

        <record id="nextflow_mandate_tag_action" model="ir.actions.act_window">
            <field name="name">Mandate Tags</field>
            <field name="res_model">nextflow.mandate.tag</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">list</field>
        </record>

    </data>
</odoo>
