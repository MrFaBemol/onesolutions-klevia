<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document" >

            <xpath expr="//div[hasclass('page')]" position="after">
                <div class="page" t-if="doc.include_sow and doc.statement_of_work" style="page-break-before: always;">
                    <div class="oe_structure"/>

                    <div>
                        <h2>Statement of Work</h2>
                    </div>
                    <div t-field="doc.statement_of_work"/>
                </div>
            </xpath>


<!--            Full column for UOM-->

            <xpath expr="//td[@name='td_quantity']/span[@t-field='line.product_uom']" position="replace" />
            <xpath expr="//td[@name='td_quantity']/span[@t-if='line.product_packaging_id']" position="replace" />

            <xpath expr="//th[@name='th_quantity']" position="after">
                <th name="th_uom" />
            </xpath>
            <xpath expr="//td[@name='td_quantity']" position="after">
                <td name="td_uom" class="text-end">
                    <span t-field="line.product_uom">units</span>
                    <span t-if="line.product_packaging_id">
                        (<span t-field="line.product_packaging_qty" t-options='{"widget": "integer"}'/> <span t-field="line.product_packaging_id"/>)
                    </span>
                </td>
            </xpath>

        </template>


        <template id="report_saleorder_document_inherit_sale_management" inherit_id="sale_management.report_saleorder_document_inherit_sale_management" >




            <xpath expr="//table[@name='table_optional_products']" position="attributes">
                <attribute name="class" add="table-borderless" separator=" "/>
            </xpath>

            <xpath expr="//table[@name='table_optional_products']//td[@name='th_option_price_unit']" position="attributes">
                <attribute name="width">15%</attribute>
            </xpath>
            <xpath expr="//table[@name='table_optional_products']//td[@name='th_option_price_unit']" position="after">
                <td name="th_option_quantity" class="text-end" width="15%">Quantity</td>
                <td name="th_option_quantity" class="text-end"  width="15%">Total</td>
            </xpath>


            <xpath expr="//table[@name='table_optional_products']//td[@name='td_option_price_unit']" position="after">
                <td name="td_option_quantity">
                    <strong class="text-end">
                        <div t-field="option.quantity" />
                    </strong>
                </td>
                <td name="td_option_total_price">
                    <strong class="text-end">
                        <div t-field="option.total_price" t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                    </strong>
                </td>
            </xpath>
        </template>

    </data>
</odoo>
