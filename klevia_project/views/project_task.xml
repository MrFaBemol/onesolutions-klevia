<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_task_form2_inherited" model="ir.ui.view">
            <field name="name">view_task_form2_inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='page_timesheets']//field[@name='timesheet_ids']//field[@name='unit_amount']" position="before">
                    <field optional="show" name="effective_time" widget="float_time"/>
                </xpath>
                <xpath expr="//page[@name='page_timesheets']//field[@name='timesheet_ids']//field[@name='unit_amount']" position="after">
                    <field optional="hide" name="add_commuting" widget="boolean_toggle" options="{'autosave': False}" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
