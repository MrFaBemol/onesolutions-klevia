<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="hr_timesheet_line_form" model="ir.ui.view">
            <field name="name">hr_timesheet_line_form</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_amount']" position="before">
                    <field name="effective_time" string="Effective Time" widget="timesheet_uom" readonly="readonly_timesheet" decoration-muted="unit_amount == 0"/>
                </xpath>
                <xpath expr="//field[@name='unit_amount']" position="after">
                    <field name="add_commuting" widget="boolean_toggle" options="{'autosave': False}" />
                </xpath>
            </field>
        </record>

        <record id="hr_timesheet_line_tree" model="ir.ui.view">
            <field name="name">hr_timesheet_line_tree</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_amount']" position="before">
                    <field optional="show" name="effective_time" widget="float_time"/>
                </xpath>
                <xpath expr="//field[@name='unit_amount']" position="after">
                    <field optional="show" name="add_commuting" widget="boolean_toggle" options="{'autosave': False}" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
